<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/theme_background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <!--地图-->
        <RelativeLayout
            android:background="@drawable/temp_map_bg1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </RelativeLayout>
        <!---->
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border_radius_white"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="@dimen/line_standard_input">
            <ImageView
                android:id="@+id/back_button"
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/last_gray"/>
            <EditText
                android:id="@+id/location"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColorHint="@color/font_light"
                android:hint="地址"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:textCursorDrawable="@null"/>
            <ImageView
                android:id="@+id/search_button"
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/search_theme"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/button_verify"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/border_radius_verify"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_standard_input">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@null"
                android:textColor="@color/white"
                android:textSize="@dimen/font_input"
                android:text="确认"/>
        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>
